<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.auric.submission2_aplikasigithubuser" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Submission2AplikasiGithubUser">

        <activity
            android:name="com.auric.submission3githubusersapp.database.FavoriteActivity"
            android:exported="true"
            android:parentActivityName="com.auric.submission3githubusersapp.database.FavoriteActivity" />

        <activity
            android:name="com.auric.submission3githubusersapp.ui.DetailUserActivity"
            android:exported="true"
            android:parentActivityName="com.auric.submission3githubusersapp.ui.DetailUserActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name="com.auric.submission3githubusersapp.ui.Splashscreenactivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/splashscreen"
            tools:ignore="LockedOrientationActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.auric.submission3githubusersapp.ui.MainActivity"
            android:exported="true" >
        </activity>
    </application>

</manifest>